{
    "git.confirmSync": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/node_modules": true,
        "**/.vscode": true,
        "**.pyc": true
    },
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "vscode-great-icons",
    "editor.fontFamily": "'Fira Code Mono', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "workbench.statusBar.feedback.visible": false,
    "editor.trimAutoWhitespace": false,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 80,
    "editor.rulers": [
        80
    ],
    "editor.wordWrap": "wordWrapColumn",
    "explorer.openEditors.visible": 9,
    "editor.formatOnSave": true,
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "80",
        "--experimental"
    ],
    "python.linting.lintOnSave": true,
    "python.linting.enabled": true,
    "python.pythonPath": "python3",
    "python.linting.pylintEnabled": false,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.dvi",
        "*.synctex.gz",
        "*.out"
    ],
    "markdown-preview-enhanced.mermaidTheme": "mermaid.dark.css",
    "markdown-preview-enhanced.previewTheme": "solarized-light.css",
    "markdown-preview-enhanced.revealjsTheme": "black.css",
    "markdownlint.config": {
        "MD013": false,
        "MD032": false,
        "MD002": false,
        "MD041": false,
        "MD022": false,
        "MD024": false,
        "MD001": false,
    },
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.quickSuggestions": true,
        "editor.formatOnSave": true
    },
    "markdown-preview-enhanced.breakOnSingleNewLine": false,
    "markdown-preview-enhanced.usePandocParser": true,
    "pandoc.pdfOptString": "--variable urlcolor=cyan",
}